{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",

        "target": "es2020",

        "module": "nodenext",
        "moduleResolution": "nodenext",

        "strict": true,

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "sourceMap": true,

        "verbatimModuleSyntax": false
    }
}
